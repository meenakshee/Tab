<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:android="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.minaxipc.tab.MainActivity">

         <android.support.desing.widget.AppBarLayout
            android:layout_hieght="wrap_content"
            android:layout_width="match_parent">
            <include
            android:layout_height="warp_content"
            android:layout_width="match_parent"
            layout="@Layout/toolbar_layout"/>
        <android.support.desing.widget.TabLayout
            android:layout_hieght="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tablayout"
            app:tabMode="fixed"
            app:tabGravity="fill">
        </android.support.desing.widget.TabLayout>
        </android.support.desing.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/viewpage"
            android:layout_height="wrap_content">
           </android.support.v4.view.ViewPager>
</RelativeLayout>
